<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="DataFilterDataBinding">

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.isuo.inspection.application.ui.data.filter.DataFilterViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorCommonGreyBg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="22dp"
                    android:text="时间选择"
                    android:textColor="@color/text_title"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:onClick="showChooseStart"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@={viewModel.startDate}"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="开始时间"
                                android:textColor="@color/color_input_hint"
                                android:textSize="14sp"
                                android:visibility="@{viewModel.startDate.length() == 0?View.VISIBLE:View.GONE}" />


                        </FrameLayout>

                        <View
                            android:layout_width="150dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="@{viewModel.startDate.length() == 0 ?@color/color_divide:@color/line_select_color}" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="至"
                        android:textColor="@color/text_title"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:onClick="showChooseEnd"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@={viewModel.endDate}"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="结束时间"
                                android:textColor="@color/color_input_hint"
                                android:textSize="14sp"
                                android:visibility="@{viewModel.endDate.length() == 0?View.VISIBLE:View.GONE}" />

                        </FrameLayout>

                        <View
                            android:layout_width="150dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="@{viewModel.endDate.length() == 0 ?@color/color_divide:@color/line_select_color}" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="22dp"
                    android:visibility="@{viewModel.checkType == 2?View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测点选择"
                        android:textColor="@color/text_title"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:onClick="buttonSelect"
                            android:tag="0"
                            android:text="前中"
                            app:select_position_state="@{viewModel.position}" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:onClick="buttonSelect"
                            android:tag="1"
                            android:text="前下"
                            app:select_position_state="@{viewModel.position}" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:onClick="buttonSelect"
                            android:tag="2"
                            android:text="左上"
                            app:select_position_state="@{viewModel.position}" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:onClick="buttonSelect"
                            android:tag="3"
                            android:text="左中"
                            app:select_position_state="@{viewModel.position}" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:onClick="buttonSelect"
                            android:tag="4"
                            android:text="左下"
                            app:select_position_state="@{viewModel.position}" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:onClick="buttonSelect"
                            android:tag="5"
                            android:text="右上"
                            app:select_position_state="@{viewModel.position}" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:onClick="buttonSelect"
                            android:tag="6"
                            android:text="右中"
                            app:select_position_state="@{viewModel.position}" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:onClick="buttonSelect"
                            android:tag="7"
                            android:text="右下"
                            app:select_position_state="@{viewModel.position}" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="45dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:onClick="buttonSelect"
                            android:tag="8"
                            android:text="后上"
                            app:select_position_state="@{viewModel.position}" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:onClick="buttonSelect"
                            android:tag="9"
                            android:text="后中"
                            app:select_position_state="@{viewModel.position}" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:onClick="buttonSelect"
                            android:tag="10"
                            android:text="后下"
                            app:select_position_state="@{viewModel.position}" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</layout>